{
  "name": "wot",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run frontend:dev\" \"cd npm backend:dev\"",
    "frontend:dev": "cd frontend && npm run start",
    "backend:dev": "cd backend && npm run watch:dev"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix",
      "prettier --write"
    ],
    "backend/server/**/*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "tabWidth": 4
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0"
  }
}